<%= simple_form_for([@solicitante, @beneficiario]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tipo_cedula %>
    <%= f.input :cedula %>
    <%= f.input :nombres %>
    <%= f.input :apellidos %>
    <%= f.input :sexo %>
    <%= f.input :fecha_de_nacimiento %>
    <%= f.input :oficio %>
    <%= f.input :estado_civil %>
    <%= f.input :tipo_de_casa %>
    <%= f.input :num_habitaciones %>
    <%= f.input :num_banos %>
    <%= f.input :enseres %>
    <%= f.input :obs_enseres %>
    <%= f.input :discapacidad %>
    <%= f.input :obs_discapacidad %>
    <%= f.simple_fields_for :historial do |p| %>
      <%= p.input :parentesco %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
