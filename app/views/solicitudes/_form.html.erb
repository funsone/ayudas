<%= simple_form_for(@solicitud) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status %>
    <%= f.input :descripcion %>
    <%= f.association :ayuda %>
    <%= f.association :relacion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
